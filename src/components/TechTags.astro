---
export interface Props {
  technologies: string[];
}

const { technologies } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {technologies.map((tech) => (
    <a href={`/tech/${tech}`} class="no-underline">
      <span class="tag hover:scale-105 cursor-pointer">
        {tech}
      </span>
    </a>
  ))}
</div>
